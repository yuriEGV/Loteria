            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "walletAddress",
            "value": "0x742d35Cc6634C0532925a3b8D7c7aC5329E8A5D5",
            "type": "string"
        },
        {
            "key": "groupId",
            "value": "",
            "type": "string"
